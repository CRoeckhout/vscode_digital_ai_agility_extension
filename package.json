{
  "name": "agility-helper",
  "displayName": "Digital.ai Agility Helper",
  "description": "Manage Digital.ai Agility tickets from VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:agility-my-tickets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agility-helper.configure",
        "title": "Agility: Set Instance & Token"
      },
      {
        "command": "agility-helper.showMyTickets",
        "title": "Agility: Show My Open Tickets"
      }
    ],
    "configuration": {
      "title": "Digital.ai Agility",
      "properties": {
        "agility.instanceUrl": {
          "type": "string",
          "default": "",
          "description": "Your Agility instance URL (e.g. https://www12.v1host.com/YourCompany)",
          "pattern": "^https?://.+",
          "patternErrorMessage": "Must be a valid URL starting with http:// or https://"
        },
        "agility.accessToken": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token (securely stored)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}