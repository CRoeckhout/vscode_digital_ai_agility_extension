{
  "name": "agility-helper",
  "displayName": "Digital.ai Agility Helper",
  "description": "Manage Digital.ai Agility tickets from VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Digital.ai Agility",
      "properties": {
        "agility.instanceUrl": {
          "type": "string",
          "default": "",
          "description": "Your Agility instance URL (e.g. https://www12.v1host.com/YourCompany)",
          "order": 1
        },
        "agility.accessToken": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token (stored securely)",
          "order": 2,
          "markdownDescription": "Create it in Agility → My Profile → Access Tokens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}