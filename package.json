{
  "name": "agility-helper",
  "displayName": "Digital.ai Agility Helper",
  "description": "Manage Digital.ai Agility tickets from VS Code",
  "icon": "images/icon.png",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "Realize",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agility-explorer",
          "title": "Digital.ai Agility",
          "icon": "images/agility-icon.svg"
        }
      ]
    },
    "views": {
      "agility-explorer": [
        {
          "id": "agility",
          "name": "My Tickets",
          "icon": "images/icon.png",
          "contextualTitle": "My Agility Tickets"
        }
        ,
        {
          "id": "agility-team",
          "name": "Team Tickets",
          "icon": "images/icon.png",
          "contextualTitle": "Team Agility Tickets"
        }
      ]
    },
    "commands": [
      {
        "command": "agility-helper.configure",
        "title": "Agility: Configure"
      },
      {
        "command": "agility-helper.showMyTickets",
        "title": "Agility: Show My Open Tickets"
      },
      {
        "command": "agility.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "agility.openInBrowser",
        "title": "Open in Agility",
        "icon": "$(globe)"
      },
      {
        "command": "agility.openTicket",
        "title": "Open ticket details"
      },
      {
        "command": "agility.changeMember",
        "title": "Agility: Change Member",
        "icon": "$(person)"
      },
      {
        "command": "agility.changeTeam",
        "title": "Agility: Change Team",
        "icon": "$(organization)"
      },
      {
        "command": "agility.createBranch",
        "title": "Create Git Branch",
        "icon": "$(git-branch)"
      },
      {
        "command": "agility.clearMember",
        "title": "Clear selected member",
        "icon": "$(close)"
      }
      ,
      {
        "command": "agility.clearTeam",
        "title": "Clear selected team",
        "icon": "$(close)"
      }
    ],
    "configuration": {
      "title": "Agility",
      "properties": {
        "agility.instanceUrl": {
          "type": "string",
          "default": "",
          "description": "Your Agility instance URL (e.g. https://www12.v1host.com/YourCompany)",
          "pattern": "^https?://.+",
          "patternErrorMessage": "Must be a valid URL starting with http:// or https://"
        },
        "agility.accessToken": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token (securely stored)"
        },
        "agility.selectedMember": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Persistently selected team member ID for the My Tickets view (do not edit unless you know the Member ID)"
        }
          ,
          "agility.selectedTeam": {
            "type": ["string", "null"],
            "default": null,
            "description": "Persistently selected Team ID for the Team Tickets view (enter the numeric Team OID part, e.g. 12345)"
          }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "agility.refresh",
          "when": "view == agility",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "agility.openInBrowser",
          "when": "view == agility && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.createBranch",
          "when": "view == agility && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.clearMember",
          "when": "view == agility && viewItem == memberHeader",
          "group": "inline"
        },
        {
          "command": "agility.openInBrowser",
          "when": "view == agility-team && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.createBranch",
          "when": "view == agility-team && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.clearTeam",
          "when": "view == agility-team && viewItem == teamHeader",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
