{
  "name": "agility-helper",
  "displayName": "Digital.ai Agility Helper",
  "description": "Manage Digital.ai Agility tickets from VS Code",
  "icon": "images/icon.png",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "Realize",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agility-explorer",
          "title": "Digital.ai Agility",
          "icon": "images/agility-icon.svg"
        }
      ]
    },
    "views": {
      "agility-explorer": [
        {
          "id": "agility",
          "type": "webview",
          "name": "My Tickets",
          "icon": "images/icon.png",
          "contextualTitle": "My Agility Tickets"
        },
        {
          "id": "agility-team",
          "type": "webview",
          "name": "Team Tickets",
          "icon": "images/icon.png",
          "contextualTitle": "Team Agility Tickets"
        },
        {
          "id": "agility-status",
          "name": "Status Configuration",
          "icon": "images/icon.png",
          "contextualTitle": "Status Colors & Dev in Progress"
        }
      ]
    }, 
    "commands": [
      {
        "command": "agility-helper.configure",
        "title": "Agility: Configure"
      },
      {
        "command": "agility-helper.showMyTickets",
        "title": "Agility: Show My Open Tickets"
      },
      {
        "command": "agility.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "agility.openInBrowser",
        "title": "Open in Agility",
        "icon": "$(globe)"
      },
      {
        "command": "agility.openTicket",
        "title": "Open ticket details"
      },
      {
        "command": "agility.changeMember",
        "title": "Agility: Change Member",
        "icon": "$(person)"
      },
      {
        "command": "agility.changeTeam",
        "title": "Agility: Change Team",
        "icon": "$(organization)"
      },
      {
        "command": "agility.createBranch",
        "title": "Create Git Branch",
        "icon": "$(git-branch)"
      },
      {
        "command": "agility.clearMember",
        "title": "Clear selected member",
        "icon": "$(close)"
      },
      {
        "command": "agility.clearTeam",
        "title": "Clear selected team",
        "icon": "$(close)"
      },
      {
        "command": "agility.configureStatusColors",
        "title": "Agility: Configure Status Colors"
      },
      {
        "command": "agility.setDevInProgressStatus",
        "title": "Agility: Set Dev in Progress Status"
      },
      {
        "command": "agility.status.refresh",
        "title": "Refresh Status List",
        "icon": "$(refresh)"
      },
      {
        "command": "agility.status.setDevInProgress",
        "title": "Set as Dev in Progress",
        "icon": "$(debug-start)"
      },
      {
        "command": "agility.status.clearDevInProgress",
        "title": "Clear Dev in Progress",
        "icon": "$(debug-stop)"
      },
      {
        "command": "agility.status.changeColor",
        "title": "Change Color",
        "icon": "$(paintcan)"
      },
      {
        "command": "agility.status.toggleVisibility",
        "title": "Toggle Visibility",
        "icon": "$(eye)"
      }
    ],
    "configuration": {
      "title": "Agility",
      "properties": {
        "agility.instanceUrl": {
          "type": "string",
          "default": "",
          "description": "Your Agility instance URL (e.g. https://www12.v1host.com/YourCompany)",
          "pattern": "^https?://.+",
          "patternErrorMessage": "Must be a valid URL starting with http:// or https://"
        },
        "agility.accessToken": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token (securely stored)"
        },
        "agility.selectedMember": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Persistently selected team member ID for the My Tickets view (do not edit unless you know the Member ID)"
        }
          ,
          "agility.selectedTeam": {
            "type": ["string", "null"],
            "default": null,
            "description": "Persistently selected Team ID for the Team Tickets view (enter the numeric Team OID part, e.g. 12345)"
          },
          "agility.statusConfig": {
            "type": "object",
            "default": {},
            "description": "Configuration for status colors and Dev in Progress flag. Populated automatically when using 'Configure Status Colors' command.",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "The status ID"
                },
                "name": {
                  "type": "string",
                  "description": "The status name"
                },
                "color": {
                  "type": "string",
                  "description": "Hex color for this status (e.g., #1f77b4)",
                  "pattern": "^#[0-9A-Fa-f]{6}$"
                },
                "isDevInProgress": {
                  "type": "boolean",
                  "description": "If true, this status is used when creating a branch"
                }
              },
              "required": ["id", "name", "color"]
            }
          },
          "agility.devInProgressStatusId": {
            "type": ["string", "null"],
            "default": null,
            "description": "Legacy: Status ID for 'Dev in Progress'. Prefer using 'Configure Status Colors' command instead."
          }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "agility.refresh",
          "when": "view == agility",
          "group": "navigation"
        },
        {
          "command": "agility.status.refresh",
          "when": "view == agility-status",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "agility.openInBrowser",
          "when": "view == agility && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.createBranch",
          "when": "view == agility && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.clearMember",
          "when": "view == agility && viewItem == memberHeader",
          "group": "inline"
        },
        {
          "command": "agility.openInBrowser",
          "when": "view == agility-team && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.createBranch",
          "when": "view == agility-team && viewItem == ticket",
          "group": "inline"
        },
        {
          "command": "agility.clearTeam",
          "when": "view == agility-team && viewItem == teamHeader",
          "group": "inline"
        },
        {
          "command": "agility.status.setDevInProgress",
          "when": "view == agility-status && viewItem == status",
          "group": "inline@1"
        },
        {
          "command": "agility.status.clearDevInProgress",
          "when": "view == agility-status && viewItem =~ /devInProgress/",
          "group": "inline@1"
        },
        {
          "command": "agility.status.changeColor",
          "when": "view == agility-status && viewItem =~ /^status/",
          "group": "inline@2"
        },
        {
          "command": "agility.status.toggleVisibility",
          "when": "view == agility-status && viewItem =~ /^status/",
          "group": "inline@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
